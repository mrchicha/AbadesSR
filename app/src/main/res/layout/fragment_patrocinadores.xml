<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.Patrocinadores">

    <!-- TODO: Update blank fragment layout -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/black"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgAbades"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:contentDescription="TODO"
                android:src="@drawable/logoabadespatrocinador" />

            <ImageView
                android:id="@+id/imgMalaCara"
                android:layout_width="match_parent"
                android:layout_height="169dp"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logomalacaraclub" />

            <ImageView
                android:id="@+id/imgAyunta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logoayuntamientoloja" />

            <ImageView
                android:id="@+id/imgApolo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logoapolopatrocinador" />

            <ImageView
                android:id="@+id/imgCola"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:src="@drawable/logococacola" />

            <ImageView
                android:id="@+id/imgPower"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/logopoweradepatrocinador" />

        </LinearLayout>
    </ScrollView>
</FrameLayout>